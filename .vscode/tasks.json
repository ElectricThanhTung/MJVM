{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-m32",
				"-std=c++14",
				"-fdiagnostics-color=always",
				"-g",
				"MJVM/VM/Src/*.cpp",
				"MJVM/Native/Src/*.cpp",
				"Drivers/Src/*.cpp",
				"User/Src/*.cpp",
				"-IMJVM/VM/Inc",
				"-IMJVM/Native/Inc",
				"-IDrivers/Inc",
				"-IUser/Inc",
				"-o",
				"Build/Bin/WinMJVM.exe"
			],
			"presentation": {
                "echo": true,
                "reveal": "never",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
			"detail": "compiler: C:/MinGW/bin/g++.exe"
		}
	]
}